{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "src",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "node_modules/puppeteer-extra/dist/index.d.ts",
    "node_modules/puppeteer-extra-plugin-stealth/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./test/**/*.spec.ts"
  ]
}
